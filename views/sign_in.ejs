<link rel="stylesheet" href="/css/sign.css">
<div class="row">
<div class="signup-form  col-lg-4 col-md-6 col-xs-12">
    <form action="/users/create" method="post">
		<h2>Login</h2>
		<div class="form-group">
        	<input type="email" class="form-control" name="email" placeholder="Email" required="required">
        </div>
		<div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
        </div>
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Sign In</button>
        </div>
        <div class="form-group">
            <label class="checkbox-inline" ><input type="checkbox" required="required"> 
                Remember me</label>
		</div>
	
    </form>
    <div class="text-center" style="color: black;"><a href="/users/sign-in" style="color: green;">Forgot Password? </a></div>
</div>
</div>
